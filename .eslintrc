{
  "root": true,
  "parserOptions": {
    "ecmaVersion": 2020,
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true
    },
    "sourceType": "module",
    "parser": "@babel/eslint-parser"
  },
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": ["eslint:recommended"],
  "rules": {
    "eqeqeq": "warn",
    "indent": "off",
    "multiline-ternary": ["warn", "always-multiline"]
  }
}
